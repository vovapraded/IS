<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="RoutesPU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/RoutesDS</jta-data-source>
        
        <class>org.example.domain.route.entity.Route</class>
        <class>org.example.domain.coordinates.entity.Coordinates</class>
        <class>org.example.domain.location.entity.Location</class>
        <class>org.example.domain.import_history.entity.ImportOperation</class>

        <properties>
            <!-- Hibernate properties -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="none"/>
            
            <!-- JTA настройки для WildFly -->
            <property name="hibernate.jta.track_by_thread" value="true"/>
            
            <!-- L2 Cache с использованием Ehcache через JCache API -->
            <property name="hibernate.cache.use_second_level_cache" value="true"/>
            <property name="hibernate.cache.use_query_cache" value="true"/>
            
            <!-- JCache RegionFactory для Hibernate 6.x -->
            <property name="hibernate.cache.region.factory_class" value="org.hibernate.cache.jcache.JCacheRegionFactory"/>
            <property name="hibernate.javax.cache.provider" value="org.ehcache.jsr107.EhcacheCachingProvider"/>
            <property name="hibernate.javax.cache.uri" value="ehcache.xml"/>
            
            <!-- Статистика L2 кэша для мониторинга и CDI Interceptors -->
            <property name="hibernate.generate_statistics" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
